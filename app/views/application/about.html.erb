<style>
  .product-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem 3rem;
    font-family: "Inter", "Sarabun", system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
  }

  .product-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .product-header h1 {
    font-size: 2.5rem;
    margin: 0 0 0.5rem;
  }

  .search-bar {
    margin-top: 1.5rem;
    display: flex;
    justify-content: center;
  }

  .search-actions {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    width: min(480px, 100%);
  }

  .search-actions form {
    display: flex;
    gap: 0.75rem;
    width: 100%;
  }

  .search-input {
    flex: 1;
    border-radius: 999px;
    border: 1px solid #d0d5dd;
    padding: 0.6rem 1rem;
    font-size: 1rem;
  }

  .search-button {
    border: none;
    border-radius: 999px;
    padding: 0.55rem 1.4rem;
    background: linear-gradient(120deg, #ec4899, #8b5cf6);
    color: #fff;
    font-weight: 600;
    cursor: pointer;
    transition: opacity 0.2s ease;
  }

  .search-button:hover {
    opacity: 0.9;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1.5rem;
  }

  .product-card {
    border-radius: 1rem;
    overflow: hidden;
    background: #fff;
    box-shadow: 0 18px 35px rgba(0, 0, 0, 0.08);
    display: flex;
    flex-direction: column;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 22px 45px rgba(0, 0, 0, 0.15);
  }

  .product-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .product-body {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  .product-name {
    font-weight: 600;
    font-size: 1.1rem;
  }

  .product-meta {
    font-size: 0.95rem;
    color: #50505a;
  }

  .product-footer {
    margin-top: auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.25rem;
    border-top: 1px solid #f0f2f5;
  }

  .cta-button {
    border: none;
    border-radius: 999px;
    padding: 0.45rem 1.1rem;
    background: linear-gradient(135deg, #4f46e5, #7c3aed);
    color: #fff;
    font-size: 0.9rem;
    cursor: pointer;
    transition: opacity 0.2s ease;
  }

  .cta-button:hover {
    opacity: 0.85;
  }
</style>

<div class="product-page">
  <div class="product-header">
    <h1>Active Products</h1>
    <p>เลือกสินค้าที่พร้อมจำหน่าย ดีไซน์สวย ทันสมัย บ้านสยาม</p>
    
    <div class="search-bar">
      <%= form_with url: aboutus_path, method: :get, local: true do %>
        <%= text_field_tag :q, @query, placeholder: "ค้นหาสินค้า / บาร์โค้ด", class: "search-input" %>        <button type="submit" class="search-button">ค้นหา</button> &nbsp;  <button
          id="supplier-line-button"
          class="cta-button"
          type="button"
          data-endpoint="<%= supplier_line_path %>"
        >
            
          send to supplier line
        </button>
      <% end %>
    </div>
  </div>

  <% image_pool = [
    "https://images.unsplash.com/photo-1448630360428-65456885c650"  # หมวกนิรภัย/ไซต์งาน
  ] %>

  <div class="product-grid">
    <% @products.each do |product| %>
      <% image_url = product.productimage.presence || image_pool.sample %>

      <article class="product-card">
        <img src="<%= image_url %>" alt="<%= product.productname %>"> <%# herb:disable erb-prefer-image-tag-helper %>
        <div class="product-body">
          <div class="product-name"><%= product.productname %></div>
          <div class="product-meta">หมวดหมู่: <%= product.category %></div>
          <div class="product-meta">
            สต็อก: <%= product.productstock %> ชิ้น
          </div>
        </div>
        <div class="product-footer">
          <div>
            <small>ราคา</small>

            <div>
              <strong>
                <%= number_to_currency(product.productsale1.to_f, unit: "฿") %>
              </strong>
            </div>
          </div>
        </div>

        <button class="cta-button">เลือกสินค้า</button>
      </article>
    <% end %>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const supplierButton = document.getElementById("supplier-line-button");
      if (!supplierButton) return;

      const csrfMeta = document.querySelector('meta[name="csrf-token"]');
      const csrfToken = csrfMeta ? csrfMeta.getAttribute("content") : "";
      const searchInput = document.querySelector(".search-input");
      const buttonLabel = supplierButton.textContent;

      supplierButton.addEventListener("click", async function() {
        if (supplierButton.disabled) return;

        supplierButton.disabled = true;
        supplierButton.textContent = "กำลังส่ง...";

        try {
          const response = await fetch(supplierButton.dataset.endpoint, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
              "X-CSRF-Token": csrfToken,
              "Accept": "application/json"
            },
            body: JSON.stringify({ query: searchInput ? searchInput.value : "" })
          });

          let payload = {};
          try {
            payload = await response.json();
          } catch (error) {
            payload = {};
          }

          const message = payload.message || (response.ok ? "ส่งข้อความเรียบร้อยแล้ว" : "ส่งข้อความไม่สำเร็จ");
          alert(message);
        } catch (error) {
          alert("ส่งข้อความไม่สำเร็จ โปรดลองอีกครั้ง");
        } finally {
          supplierButton.disabled = false;
          supplierButton.textContent = buttonLabel;
        }
      });
    });
  </script>
</div>
