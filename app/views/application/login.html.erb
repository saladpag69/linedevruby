<% content_for :title, "Sign in" %>

<% content_for :head do %>
  <style>
    :root {
      color-scheme: light dark;
      --page-bg: radial-gradient(circle at top left, #f6f9ff 0%, #eef2fb 40%, #fefefe 100%);
      --card-bg: rgba(255, 255, 255, 0.85);
      --card-border: rgba(15, 23, 42, 0.08);
      --text-color: #0f172a;
      --muted-color: #5f6b84;
      --accent: #1a5cff;
      --accent-strong: #0d3ec7;
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --page-bg: radial-gradient(circle at top, #111627 0%, #0b1022 35%, #070b18 100%);
        --card-bg: rgba(12, 16, 32, 0.85);
        --card-border: rgba(255, 255, 255, 0.08);
        --text-color: #f8fafc;
        --muted-color: #cbd5f5;
      }
    }

    body {
      margin: 0;
      min-height: 100vh;
      font-family: "Inter", "SF Pro Display", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      background: var(--page-bg);
    }

    .login-page {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 480px));
      align-items: center;
      justify-content: center;
      gap: 4rem;
      padding: 5vw 6vw;
    }

    .brand-panel {
      max-width: 420px;
      color: var(--text-color);
    }

    .brand-panel .eyebrow {
      text-transform: uppercase;
      letter-spacing: 0.3em;
      font-size: 0.75rem;
      color: var(--accent);
    }

    .brand-panel h1 {
      margin: 0.6rem 0;
      font-size: clamp(2.5rem, 3vw, 3rem);
      font-weight: 600;
    }

    .brand-panel p {
      margin: 0;
      color: var(--muted-color);
      font-size: 1rem;
      line-height: 1.6;
    }

    .login-card {
      width: min(420px, 90vw);
      padding: 2.5rem;
      border-radius: 28px;
      border: 1px solid var(--card-border);
      background: var(--card-bg);
      box-shadow: 0 20px 60px rgba(15, 23, 42, 0.1);
      backdrop-filter: blur(14px);
      color: var(--text-color);
    }

    .login-card h2 {
      margin: 0;
      font-size: 1.6rem;
      font-weight: 600;
    }

    .login-card p {
      margin-top: 0.4rem;
      color: var(--muted-color);
      font-size: 0.95rem;
    }

    .login-form {
      margin-top: 1.5rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .input-group label {
      display: block;
      font-size: 0.85rem;
      font-weight: 600;
      margin-bottom: 0.3rem;
    }

    .input-group input {
      width: 100%;
      border-radius: 14px;
      border: 1px solid var(--card-border);
      padding: 0.85rem 1rem;
      background: rgba(255, 255, 255, 0.8);
      font-size: 1rem;
      color: #0f172a;
      transition: border 0.2s, box-shadow 0.2s;
    }

    .input-group input:focus {
      outline: none;
      border-color: var(--accent);
      box-shadow: 0 0 0 3px rgba(26, 92, 255, 0.2);
    }

    .form-footer {
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 0.8rem;
      font-size: 0.9rem;
    }

    .primary-btn {
      width: 100%;
      border: none;
      border-radius: 18px;
      padding: 0.95rem 1rem;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      background: linear-gradient(120deg, var(--accent), var(--accent-strong));
      color: #fff;
      transition: transform 0.15s ease, box-shadow 0.15s ease;
    }

    .primary-btn:hover {
      transform: translateY(-1px);
      box-shadow: 0 12px 30px rgba(13, 62, 199, 0.3);
    }

    .helper-links {
      margin-top: 1rem;
      font-size: 0.9rem;
      color: var(--muted-color);
      text-align: center;
    }

    .helper-links a {
      color: var(--accent);
      text-decoration: none;
      font-weight: 600;
    }

    .badge-row {
      display: flex;
      gap: 0.6rem;
      flex-wrap: wrap;
      margin-top: 0.8rem;
    }

    .mini-badge {
      border-radius: 999px;
      background: rgba(26, 92, 255, 0.12);
      color: var(--accent);
      font-size: 0.75rem;
      padding: 0.25rem 0.7rem;
    }
  </style>
<% end %>

<div class="login-page">
  <section class="brand-panel">
    <span class="eyebrow">Ai Note</span>
    <h1>Customer portal</h1>

    <p>
      Keep every conversation polished and on pace. Sign in to review notes,
      respond to customers, and continue where you left off with a calm, minimal
      workspace.
    </p>

    <div class="badge-row">
      <span class="mini-badge">24/7 secure</span>
      <span class="mini-badge">Lightning sync</span>
      <span class="mini-badge">Privacy-first</span>
    </div>
  </section>

  <section class="login-card" aria-label="Sign in form">
    <header>
      <h2>Welcome back</h2>
      <p>Enter your details to access the customer dashboard.</p>
    </header>

    <%= form_with url: login_path, method: :post, class: "login-form" do |form| %>
      <div class="input-group">
        <%= form.label :email, "Email address" %>
        <%= form.email_field :email, placeholder: "you@example.com", autofocus: true, required: true %>
      </div>

      <div class="input-group">
        <%= form.label :password, "Password" %>
        <%= form.password_field :password, placeholder: "••••••••", required: true %>
      </div>

      <div class="form-footer">
        <label><%= form.check_box :remember_me %> Remember me</label>
        <a href="#">Forgot password?</a>
      </div>

      <button type="submit" class="primary-btn">Sign in</button>
    <% end %>

    <div class="helper-links">
      New to Ai Note? <a href="#">Create an account</a>
    </div>
  </section>
</div>
